---
const { title = 'Tectrum', description = 'Consultoría boutique para digitalizar, automatizar y escalar tu negocio con la precisión de Tectrum.' } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=SF+Pro+Display:wght@300;400;500;600&family=SF+Pro+Text:wght@300;400;500&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="icon" type="image/png" href="https://tectrum.ar//docs/Images/logo.png"/>
  </head>
  <body class={Astro.props.bodyClass}>
    <div class="noise"></div>
    <header class="top-bar glass" id="inicio">
      <div class="wrap">
        <a class="brand" href="/">Tectrum</a>
        <nav>
          <ul>
            <li><a href="/#firma" data-scroll="true">Nosotros</a></li>
            <li class="nav-dropdown">
              <button class="nav-link dropdown-toggle" type="button" data-dropdown-target="services-menu" aria-expanded="false">
                Servicios
                <span class="dropdown-caret" aria-hidden="true"></span>
              </button>
              <ul id="services-menu" class="dropdown-menu">
                <li><a href="/#servicios" data-scroll="true">Visi&oacute;n general</a></li>
                <li><a href="/boost/">Boost</a></li>
                <li><a href="/automation/">Automation</a></li>
                <li><a href="/growth-intelligence/">Growth Intelligence</a></li>
              </ul>
            </li>
            <li><a href="/#herramientas" data-scroll="true">Herramientas</a></li>
          </ul>
        </nav>
        <a class="btn glass primary" href="/#contacto" data-scroll="true">Contacto</a>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="footer glass">
      <div class="wrap footer-grid">
        <div class="footer-title"><strong>TECTRUM</strong></div>
        <div class="footer-links" style="display: flex; justify-content: center; gap: 2rem;">
          <a class="footer-link" href="https://www.linkedin.com/company/tectrum-ar/">LinkedIn</a>
          <a class="footer-link" href="mailto:consultas@tectrum.ar" target="_blank" rel="noopener">Consultas</a>
        </div>
      </div>
    </footer>

    <script src="/script.js" defer></script>
  </body>
  </html>

